{
  "expo": {
    "name": "Enerbook",
    "slug": "Enerbook",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./public/img/Iconcolor.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./public/img/Iconcolor.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "La aplicación accede a tus fotos para subir recibos CFE.",
          "cameraPermission": "La aplicación accede a tu cámara para tomar fotos de recibos CFE."
        }
      ]
    ]
  }
}
